<h1><%= @cocktail.name %></h1>

<%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>
<ul class='list-inline'>
<% @cocktail.doses.each do |dose| %>
<li> <%= dose.description %> <%= dose.ingredient.name %> <%= link_to 'Delete dose', dose_path(dose), method: :delete %></li>
<% end %>
</ul>
<%= link_to 'Go back', cocktails_path %>
<%= link_to 'New dose', new_cocktail_dose_path(@cocktail) %>
